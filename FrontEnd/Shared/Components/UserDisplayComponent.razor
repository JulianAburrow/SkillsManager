<MudCardContent>
    <MudField Label="First Name">@UserModel.FirstName</MudField>
    <MudField Label="Last Name">@UserModel.LastName</MudField>
    <MudField Label="Status">@UserModel.UserStatus.StatusName</MudField>
    <MudTable Items="@UserModel.UserSkill">
        <HeaderContent>
            <MudTh title="Sort by Skill">
                <MudTableSortLabel SortBy="new Func<UserSkillModel, object>(x => x.Skill.SkillName)">
                    Skill
                </MudTableSortLabel>
            </MudTh>
            <MudTh title="Sort by Level">
                <MudTableSortLabel SortBy="new Func<UserSkillModel, object>(x => x.SkillScore)">
                    Level
                </MudTableSortLabel>
            </MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Skill.SkillName</MudTd>
            <MudTd>@context.SkillScore</MudTd>
        </RowTemplate>
    </MudTable>
</MudCardContent>